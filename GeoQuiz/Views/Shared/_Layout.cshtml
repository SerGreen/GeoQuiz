@{ 
    string language = Session["Language"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    @Styles.Render("~/Content/css/bootstrap", "~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/javascript")
    @Scripts.RenderFormat(@"<script async src=""{0}""></script>", "~/bundles/bootstrap")
</head>
<body>
    <script>$(function () { $.material.init(); });</script>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action(nameof(MenuController.Index), MenuController.Nameof, new { lang = language })" class="navbar-brand" style="font-size:xx-large"><span class="glyphicon glyphicon-globe" id="geo-icon"></span> GeoQuiz</a>
            </div>
            <ul class="nav navbar-nav" style="float: right">
                <li><a href="@Url.Action(nameof(MenuController.Index), MenuController.Nameof, new { lang = language == "RU" ? "EN" : "RU" })" class="navbar-link pull-right btn" style="margin:0">@language</a></li>
            </ul>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()        
    </div>

    <hr />
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - SerGreen</p>
    </footer>
</body>
</html>